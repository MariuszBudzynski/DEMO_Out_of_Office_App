@page
@model DEMOOutOfOfficeApp.Pages.EditLeaveRequestModel

@{
    ViewData["Title"] = "Edit Leave Request";
}

<form id="employeeForm" method="post" enctype="multipart/form-data">

    <input type="hidden" id="EmployeeId" name="LeaveRequestDTO.Id" value="@Model.LeaveRequestDTO.Id" />

    <div class="form-group">
        <label for="FullName">Full Name</label>
        <input type="text" id="FullName" name="LeaveRequestDTO.EmployeeName" class="form-control" value="@Model.LeaveRequestDTO.EmployeeName" readonly />
    </div>

    <div class="form-group">
        <label for="AbsenceReason">Absence Reason</label>
        <select id="AbsenceReason" name="LeaveRequestDTO.AbsenceReason" class="form-control" required>
            @foreach (var option in Model.AbsenceReason)
            {
                <option value="@option.Name">@option.Name</option>
            }
        </select>
        <span asp-validation-for="LeaveRequestDTO.AbsenceReason" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="StartDate">Start Date</label>
        <input type="date" id="StartDate" name="LeaveRequestDTO.StartDate" class="form-control" value="@Model.LeaveRequestDTO.StartDate.ToString("yyyy-MM-dd")" required />
        <span asp-validation-for="LeaveRequestDTO.StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="EndDate">End Date</label>
        <input type="date" id="EndDate" name="LeaveRequestDTO.EndDate" class="form-control" value="@Model.LeaveRequestDTO.EndDate.ToString("yyyy-MM-dd")" required />
        <span asp-validation-for="LeaveRequestDTO.EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Comment">Comment</label>
        <textarea id="Comment" name="LeaveRequestDTO.Comment" class="form-control">@Model.LeaveRequestDTO.Comment</textarea>
    </div>

    <div class="form-group">
        <label for="Status">Status</label>
        <input type="text" id="Status" name="LeaveRequestDTO.Status" class="form-control" value="@Model.LeaveRequestDTO.Status" readonly />
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-page="/EditLeaveRequest" class="btn btn-secondary">Back</a>
    </div>

</form>
