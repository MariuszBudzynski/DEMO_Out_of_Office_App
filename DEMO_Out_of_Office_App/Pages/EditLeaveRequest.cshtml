@page
@model DEMOOutOfOfficeApp.Pages.EditLeaveRequestModel

@{
    ViewData["Title"] = "Edit Leave Request";
}

<h1 style="text-align: center">@ViewData["Title"]</h1>

<form id="leaveRequestForm" method="post" enctype="multipart/form-data">
    <input type="hidden" id="LeaveRequestId" name="LeaveRequest.ID" value="@Model.LeaveRequest.ID" />
    <input type="hidden" id="EmployeeId" name="LeaveRequest.EmployeeID" value="@Model.LeaveRequest.EmployeeID" />

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th style="width: 20%">Full Name</th>
                <td>@Model.FullName</td>
            </tr>
            <tr>
                <th>Select Reason</th>
                <td>
                    <select asp-for="LeaveRequest.AbsenceReasonID" class="form-control" required>
                        @foreach (var reason in Model.AbsenceReasons)
                        {
                            <option value="@reason.ID">@reason.Name</option>
                        }
                    </select>
                    <span asp-validation-for="LeaveRequest.AbsenceReasonID" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th>Start Date</th>
                <td>
                    <input asp-for="LeaveRequest.StartDate" type="date" class="form-control" required />
                    <span asp-validation-for="LeaveRequest.StartDate" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th>End Date</th>
                <td>
                    <input asp-for="LeaveRequest.EndDate" type="date" class="form-control" required />
                    <span asp-validation-for="LeaveRequest.EndDate" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>
                    <textarea asp-for="LeaveRequest.Comment" class="form-control"></textarea>
                    <span asp-validation-for="LeaveRequest.Comment" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th>Status</th>
                <td>@Model.LeaveRequest.StatusType</td>
            </tr>
        </tbody>
    </table>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-page="/LeaveRequests" class="btn btn-secondary">Back</a>
    </div>
</form>
