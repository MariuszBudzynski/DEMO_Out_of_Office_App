    <a class="btn btn-primary" asp-page="/ApprovalRequests/Create">Open a Request</a>
</div> *@

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#aprovalltable').DataTable();
        });
    </script>
}