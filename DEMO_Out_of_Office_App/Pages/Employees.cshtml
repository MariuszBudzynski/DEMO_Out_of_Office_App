@page
@model DEMOOutOfOfficeApp.Pages.EmployeesModel
@{
    ViewData["Title"] = "Employees";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.css">

<h1>Employees</h1>

<form method="get">
    <input type="text" name="SearchTerm" value="@Model.SearchTerm" placeholder="Search by name" />
    <button type="submit">Search</button>
</form>

<table id="employeesTable" class="display">
    <thead>
        <tr>
            <th>Full name</th>
            <th>Subdivision</th>
            <th>Position</th>
            <th>Status</th>
            <th>People Partner</th>
            <th>OutOfOfficeBalance</th>
            <th>Photo</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>@employee.FullName</td>
                <td>@employee.SubdivisionName</td>
                <td>@employee.PositionName</td>
                <td>@employee.StatusName</td>
                <td>@employee.PeoplePartnerName</td>
                <td>@employee.OutOfOfficeBalance</td>
                <td>
                    <img src="~/images/@employee.Photo" alt="Photo of @employee.FullName" width="50" height="50" />
                </td>
                <td>
                    <button type="submit" name="edit" value="@employee.ID" class="btn btn-primary btn-sm">Edit</button>
                    <button type="submit" name="deactivate" value="@employee.ID" class="btn btn-danger btn-sm">Deactivate</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<form method="post">
    <button type="submit" name="add" value="new" class="btn btn-success">Add Employee</button>
</form>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
        $('#employeesTable').DataTable();
    });
    </script>
}