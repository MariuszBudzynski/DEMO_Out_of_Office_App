@page
@model DEMOOutOfOfficeApp.Pages.OpenApprovalRequestModel
@{
	ViewData["Title"] = "Open Approval Request";
}

<h1 style="text-align: center">@ViewData["Title"]</h1>

<form method="post">


    <table class="table">
        <thead>
            <tr>
                <th>Absence Reason</th>
                <th>Absence Reason Comment</th>
                <th>Status</th>
                <th>Comment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <input type="text" value="@Model.ApprovalRequest.AbsenceReason" class="form-control" readonly />
                </td>
                <td>
                <input type="text" value="@Model.ApprovalRequest.AbsenceReasonComment" class="form-control" readonly />
                </td>
                <td>
                    <input type="text" value="@Model.ApprovalRequest.Status" class="form-control" readonly />
                </td>
                <td>
                    <input asp-for="ApprovalRequest.Comment" class="form-control" />
                </td>
                <td>
                    <input asp-for="AprovalRequestID" type="hidden" />
                    <button asp-page-handler="Approve" type="submit" class="btn btn-success btn-block" name="AprovalType" value="Approve">Approve</button>
                    <button asp-page-handler="Reject" type="submit" class="btn btn-warning btn-block" name="AprovalType" value="Reject">Reject</button>

                </td>
            </tr>
        </tbody>
    </table>
</form>


 

<a asp-page="/ApprovalRequests" class="btn btn-secondary">
    <button type="button" class="btn btn-sm btn-secondary btn-block">Back</button>
</a>
